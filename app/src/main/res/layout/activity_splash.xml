<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/sky_color_nature">

    <ImageView
        android:id="@+id/homecloud"
        android:layout_width="211dp"
        android:layout_height="140dp"
         android:src="@drawable/cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/quotesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="आदानं सुखदृष्टिः, आदानं शान्तिरस्तु।"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="67dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/homecloud"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/quotesan"/>

</androidx.constraintlayout.widget.ConstraintLayout>